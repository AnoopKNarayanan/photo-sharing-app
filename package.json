    "jest": "^29.5.0",
    "lit": "^2.6.1",
    "typescript": "~4.8.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
